@model MintPlayer.AspNetCore.IdentityServer.Provider.Dtos.Dtos.ExternalLoginResult
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Processing...</title>
    <script type="text/javascript">
        const message = {
            status: @( (int)Model.Status ),
            provider: "@Model.Provider",
            error: "@Model.Error",
            errorDescription: "@Model.ErrorDescription"
        };
        @if (Model.TargetOrigin == null)
        {
            <text>window.opener.postMessage(JSON.stringify(message)); </text>
        }
        else
        {
            <text>window.opener.postMessage(JSON.stringify(message), "@Model.TargetOrigin"); </text>
        }
    </script>
</head>
<body>
    <h1>Sign-in succeeded</h1>
    <p>
        We&#39;ve successfully registered your @Model.Provider login. If this window does not close automatically, you can safely close it now, and continue using the application.
    </p>
    <p>
        You are seeing this window because you&#39;re visiting the application through a web browser while the PWA is installed.
        Web browsers do not yet support using window.open to open a url in the webbrowser instead of the PWA.
        <a href="https://github.com/w3c/manifest/issues/989" title="Info about the restrictions of window.open()" target="_blank">Click here for more information</a>.
    </p>
</body>
</html>
